{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env PORT=3001 node src/index.js",
    "docker-build-production": "docker build --no-cache -f Dockerfile -t adlace-server:latest --build-arg build_env=production .",
    "docker-tag-production": "docker tag adlace-server:latest ggcaponetto/adlace-server:latest",
    "docker-push-production": "docker image push ggcaponetto/adlace-server:latest",
    "docker-run-production": "docker stop adlace-server || true && docker rm adlace-server || true || docker run -d --name adlace-server -p 3001:3001 -d ggcaponetto/adlace-server:latest .",
    "docker-deploy": "npm run docker-build-production && npm run docker-tag-production && npm run docker-push-production",
    "test": "mocha --require @babel/register 'test/**/*.test.js'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/register": "^7.18.9",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "mocha": "^10.0.0",
    "winston": "^3.8.1"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.18.1"
  }
}
